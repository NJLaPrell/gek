    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@google-cloud/local-auth": "^2.1.0",
    "@ng-bootstrap/ng-bootstrap": "^14.0.1",
    "@ngrx/effects": "^15.2.1",
    "@ngrx/store": "^15.2.1",
    "@ngrx/store-devtools": "^15.2.1",
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.2.3",
    "moment": "^2.29.4",
    "ng-bootstrap": "^1.6.3",
    "ngx-drag-drop": "^15.0.1",
    "pm2": "^5.3.0",
